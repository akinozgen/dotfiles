general {
        colors = true
	color_good =     '#f8f8f2'  
        color_degraded = '#f8f8f2'  
        color_bad =      '#f8f8f2'  
        interval = 5
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /home"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "ğŸ”‹ %percentage %remaining"
}

disk "/home" {
        format = "ğŸ–´ %avail"
}

load {
        format = "ğŸ‘¾ %1min"
}

memory {
        format = "ğŸ %used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "ğŸ“… %d.%m.%Y, %H:%M"
}
